mixin nav_des(p,i,href,name,subir,bajar,title)
	li.menu__item
		if (p==1)
			a.menu__link(class=name  href=href)
				spam.nav-text=title
				span.subir=subir
				span.bajar=bajar
		else 
			a.red-social(target="_blank" href=ref)
				i(class=name data-icon=i)

mixin nav-parallax(href,subir,bajar,title)
	li.menu_item.li(data-menuanchor=href)
		a.hover-nav.menu_link(href='#'+href)
			span.hover-subir=subir
			span.hover-bajar=bajar
			span.hover-txt(class="hover-nav-text-"+bajar)=title 

mixin check(p)
	.row
		.pd-2
			.col.s2
				span.circle
					i.material-icons.check done
			.col.s10
				p=p

mixin pilar(image,h4,p1,p2,p3)
	.row
		.slide__text
			.row
				img.responsive-img.ico-img.z-depth-2(src=image)
			.row
				h4.sub-title=h4
				p=p1
				p=p2
				p=p3

mixin perfil(img,name,p,h2)
	.mix(class=name)
		if (p==1)
			h2=h2
		else 
			img.z-depth-3.circle(src=img)
